{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 0,
  "default_container_padding": 0,
  "border": true,
  "border_width": 4,
  "border_offset": -1,
  "border_colours": {
    "single": "#FF3333",
    "stack": "#FF0000",
    "monocle": "#3368FF",
    "unfocused": "#808080"
  },
  "stackbar": {
    "height": 20,
    "mode": "OnStack",
    "tabs": {
      "width": 150,
      "focused_text": "#F333FF",
      "unfocused_text": "#b3b3b3",
      "background": "#141414"
    }
  },
  "monitors": [
    {
		"workspaces": [
        { "name": "I"  , "layout": "BSP" },
        { "name": "II" , "layout": "VerticalStack" },
        { "name": "VII", "layout": "VerticalStack" }
      ]
    }
  ],
  "mouse_follows_focus": false,
  "window_container_behaviour": "Append",
  "float_rules": [
	  { "kind" : "Exe"  , "id" : "mda.exe"         , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "Inca.exe"        , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "lync.exe"        , "matching_strategy" : "Equals" },
	  { "kind" : "Title", "id" : "Figure"          , "matching_strategy" : "StartsWith" },
	  { "kind" : "Exe"  , "id" : "Kalkules.exe"    , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "Everything.exe"  , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "DeepL.exe"       , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "Lingoes64.exe"   , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "mstsc.exe"       , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "GCS-User-App.exe", "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "creoagent.exe"   , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "Memoit.exe"      , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "Rainmeter.exe"   , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "vlc.exe"         , "matching_strategy" : "Equals" },
	  { "kind" : "Title", "id" : "계산기"          , "matching_strategy" : "Equals" },
	  { "kind" : "Exe"  , "id" : "KakaoTalk.exe"   , "matching_strategy" : "Equals" },
	  { "kind" : "Title", "id" : "Microsoft"       , "matching_strategy" : "StartsWith" },
  ],
  "manage_rules": [
	  { "kind" : "Exe"  , "id" : "matlab.exe"         , "matching_strategy" : "Equals"},
	  { "kind" : "Exe"  , "id" : "CANoe64.exe"        , "matching_strategy" : "Equals"},
	  { "kind" : "Exe"  , "id" : "IntegrityClient.exe", "matching_strategy" : "Equals"},
	  { "kind" : "Exe"  , "id" : "nvim-qt.exe"        , "matching_strategy" : "Equals"},
	  { "kind" : "Exe"  , "id" : "SumatraPDF.exe"     , "matching_strategy" : "Equals"},
	  { "kind" : "Exe"  , "id" : "WinMergeU.exe"      , "matching_strategy" : "Equals"},
	  { "kind" : "Title", "id" : ".xlsx"              , "matching_strategy" : "EndsWith"},
  ]
}
