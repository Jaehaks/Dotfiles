#
#
# These commands allow to run shell commands directly from within Tig.
# Unless otherwise specified, commands are run in the foreground with
# their console output shown (as if '!' was specified). When multiple
# command options are specified their behavior are combined, e.g. "?<git
# commit" will prompt the user whether to execute the command and will
# exit Tig after completion.
#
#   !	Run the command in the foreground with output shown.
#   @	Run the command in the background with no output.
#   ?	Prompt the user before executing the command.
#   +	Run the command synchronously, and echo the first line of output to the status bar.
#   <	Exit Tig after executing the command.
#   >	Re-open Tig instantly in the last displayed view after executing the command.
#
# User-defined commands can optionally refer to Tig's internal state
# using the following variable names, which are substituted before
# commands are run (see 'man tigrc' for the full list):
#
# Possible key bindings
# <Enter>, <Space>, <Backspace>, <Tab>, <Escape> 또는 <Esc>, <Left>, <Right>, <Up>, <Down>, <Insert> 또는 <Ins>,
# <Delete> 또는 <Del>, <Hash>, <LessThan> 또는 <LT>, <Home>, <End>, <PageUp> 또는 <PgUp>, <PageDown> 또는 <PgDown>,
# <F1>, <F2>, <F3>, <F4>, <F5>, <F6>, <F7>, <F8>, <F9>, <F10>, <F11>, <F12>
#
#
#   %(head)		The current ref ID. Defaults to HEAD
#   %(commit)		The current commit ID.
#   %(blob)		The current blob ID.
#   %(branch)		The current local branch name. if the commit doesn't indicate branch, it is empty
#   %(remote)		The current remote alias name ex) origin
#   %(tag)		The current tag name.
#   %(stash)		The current stash name.
#   %(directory)	The current directory path in the tree view;
#			empty for the root directory.
#   %(file)		The currently selected file.
#   %(ref)		The reference given to blame or HEAD if undefined.
#   %(revargs)		The revision arguments passed on the command line.
#   %(fileargs)		The file arguments passed on the command line.
#   %(cmdlineargs)	All other options passed on the command line.
#   %(diffargs)		The diff options from `diff-options` or `TIG_DIFF_OPTS`
#   %(prompt)		Prompt for the argument value.
#   %(repo:head)	The name of the checked out branch.
#   %(repo:remote)	The remote name associated with the checked out branch.
#   %(repo:upstream)	The upstream branch associated with the checked out branch.


# use '@' only for tasks with no possibility of error
# use '!' when it use external tool to show result
bind main   gp    ?git cherry-pick %(commit)                        # add specific commit to main
bind main   y     @sh -c "echo -n %(commit) | clip"                 # copy to clipboard hash
bind main   p     !git pull %(remote)                               # git pull
bind main   <C-P> !git pull --rebase %(remote)                      # git pull forcely
bind main   grm   ?@git reset --mixed %(commit)                     # reset to specific commit
bind main   grh   ?@git reset --hard %(commit)                      # reset to specific commit
bind main   gc    !git switch "%(prompt Branch name to checkout: )" # checkout to other branch
bind main   gC    !git switch --detach %(commit)                    # checkout to other detached commit
bind main   gta   !sh -c "git tag -a %(prompt Tag name : ) %(commit) && git push %(repo:remote) --tags" # add tag and update to remote repo
bind main   gtd   ?sh -c "git tag -d %(tag) && git push --delete %(repo:remote) %(tag)"                 # delete tag and update to remote repo
bind main   gz    !sh -c "git archive --verbose --format=zip --output=$(basename $(git rev-parse --show-toplevel))_%(repo:head)_%(tag)_$(git rev-parse --short %(commit)).zip %(commit)" # archive repo and make zip file

bind status c     !git commit                                      # commit and open editor, you should set core.editor in gitconfig
bind status p     !git pull %(repo:remote) %(repo:head)            # git pull
bind status P     ?git push -u %(repo:remote) %(repo:head)         # push to remote repo
bind status <C-P> ?git push --force %(repo:remote) %(repo:head)    # force to push to remote repo
bind status <C-S> @git add --update                                # add all changed tracked files to commit
bind status gsa   @git stash                                       # stash doesn't updated in view-stash, so use it in status-view

bind stash  gsp   @git stash pop %(stash)                          # apply selected stash and delete from list
bind stash  gsd   ?@git stash drop %(stash)                        # delete stash manually

bind refs   gc    !git switch %(branch)                            # checkout to branch
bind refs   gba   !git branch "%(prompt Branch name to create : )" # create branch
bind refs   gbd   ?git branch -D %(branch)                         # delete select branch
bind refs   gmm   ?git merge --no-ff %(branch)          		   # merge %(branch) using 3way to current branch
bind refs   gmr   ?git rebase %(branch)         				   # merge %(branch) using linear rewrite to current branch

bind reflog grm   ?@git reset --mixed %(commit)
bind reflog grh   ?@git reset --hard %(commit)


